<div class="page-header">
  <h1>
    Patients
    <a href="/patients/new" class="btn btn-lg btn-success">New Patient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.email %></td>
        <td><%= patient.password %></td>
        <td>
          <a href="/patients/<%= patient.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @patients, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
